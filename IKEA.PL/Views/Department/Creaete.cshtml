@model CreatedDepartmentDto
@{
    ViewData["Title"] = "Creaete";
}

<h1>Creaete New Department</h1>
<form action="/Department/Create" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class=" form-lable" asp-for="Code"> Code </label>
        <input asp-for=Code class=" form-control" />
        <span asp-validation-for="Code" class=" text-danger"> </span>
    </div>

    <div class="form-group">
        <label class=" form-lable" asp-for="Name"> Name </label>
        <input asp-for=Name class=" form-control" />
        <span asp-validation-for="Name" class=" text-danger"> </span>
    </div>

    <div class="form-group">
        <label class=" form-lable" asp-for="CreatedDate"> </label>
        <input type="date" asp-for=CreatedDate class=" form-control" />
        <span asp-validation-for="CreatedDate" class=" text-danger"> </span>
    </div>

    <div>
        <input type="submit" value="Create" class=" btn btn-primary"/>|
        <a asp-controller="Department" asp-action="Index" class=" btn btn-light">
            Back To List
        </a>
    </div>

    
</form>

